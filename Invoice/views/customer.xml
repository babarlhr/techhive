<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  <record id="view_form_customer_task" model="ir.ui.view">
    <field name="name">Customer Task Form</field>
    <field name="model">customer.table</field>
    <field name="arch" type="xml">
      <form>
        <header>
        </header>
        <sheet>
          <group name="group_top">
            <group name="group_left">
              <field name="name"/>
              <field name="phone"/>
              <field name="address"/>
            </group>
            <group name="group_right">
              <field name="saletax_no"/>
              <field name="ntn_no" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
